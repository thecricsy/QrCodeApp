<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="Thêm danh mục"/>

    <EditText
        android:id="@+id/edtName_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập tên"
        android:inputType="textPersonName"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtExpectedQuantity_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập số lượng dự định"
        android:inputType="textPersonName"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtQuantity_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập số lượng"
        android:inputType="number"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/edtPendingQuantity_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập số lượng tạm hoãn"
        android:inputType="number"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtDescription_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mô tả"
        android:inputType="textPersonName"
        android:textSize="15sp" />
</LinearLayout>