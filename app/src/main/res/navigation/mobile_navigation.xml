<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.qrcodeapp.Fragments.Home.HomeFragment"
        android:label="Trang chủ"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_action"
        android:name="com.example.qrcodeapp.Fragments.Action.ActionFragment"
        android:label="Tác vụ"
        tools:layout="@layout/fragment_action" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.qrcodeapp.Fragments.Dashboard.DashboardFragment"
        android:label="Thống kê"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.qrcodeapp.Fragments.Profile.ProfileFragment"
        android:label="Thông tin"
        tools:layout="@layout/fragment_profile" />
</navigation>